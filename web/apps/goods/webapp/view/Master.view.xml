            <OverflowToolbar visible="{config>/isEdit}">
                <ToolbarSpacer/>
                <Button type="Accept" text="{i18n>save}" press="onSave">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>
                <Button type="Reject" text="{i18n>cancel}" press="onCancel">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>

</mvc:View>
